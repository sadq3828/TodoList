@model IEnumerable<TodoListweb.Models.Data.Todo>
@{
    var editTodo = ViewBag.EditTodo as TodoListweb.Models.Data.Todo;
    ViewData["Title"] = editTodo != null ? "Edit Task" : "Add Task";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12"> <!-- محدود کردن عرض فرم -->

        <!-- Add / Edit Todo -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title text-primary mb-3">
                    @(editTodo != null ? "Edit Task" : "Add New Task")
                </h5>

                <form asp-action="@(editTodo != null ? "Edit" : "Create")" method="post">
                    @if(editTodo != null)
                    {
                        <input type="hidden" name="id" value="@editTodo.Id" />
                    }
                    <div class="mb-2">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" 
                               value="@(editTodo?.Title ?? "")" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3">@editTodo?.Description</textarea>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary btn-sm">
                            @(editTodo != null ? "Save" : "Add")
                        </button>
                        @if(editTodo != null)
                        {
                            <a asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <!-- Todo List -->
        @foreach(var todo in Model)
        {
            <div class="card mb-2 todo-card" data-todo-id="@todo.Id">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@todo.Title</strong>
                        @if(!string.IsNullOrWhiteSpace(todo.Description))
                        {
                            <p>@todo.Description</p>
                        }
                        <span class="done-check text-success" style="display:@(todo.IsDone ? "inline" : "none");">
                            &#10003; Done
                        </span>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Index" asp-route-editId="@todo.Id" class="btn btn-sm btn-primary edit-btn">Edit</a>

                        <form class="done-form" asp-action="ToggleDone" method="post">
                            <input type="hidden" name="id" value="@todo.Id" />
                            <button type="submit" class="btn btn-sm btn-success done-btn" style="display:@(todo.IsDone ? "none" : "inline");">
                                Done
                            </button>
                        </form>

                        <form asp-action="Delete" method="post" 
                              onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید این کار را حذف کنید؟');">
                            <input type="hidden" name="id" value="@todo.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Toggle Done
            document.querySelectorAll('.done-form').forEach(form => {
                form.addEventListener('submit', e => {
                    e.preventDefault();
                    const card = form.closest('.todo-card');
                    const doneBtn = form.querySelector('.done-btn');
                    const editBtn = card.querySelector('.edit-btn');
                    const check = card.querySelector('.done-check');

                    // مخفی کردن دکمه Done و Edit و نمایش تیک
                    if(doneBtn) doneBtn.style.display = 'none';
                    if(editBtn) editBtn.style.display = 'none';
                    if(check) check.style.display = 'inline';

                    // ارسال فرم به سرور
                    fetch(form.action, {
                        method: 'POST',
                        body: new FormData(form)
                    });
                });
            });

            // ریست هنگام Edit
            document.querySelectorAll('.edit-btn').forEach(editBtn => {
                editBtn.addEventListener('click', () => {
                    const card = editBtn.closest('.todo-card');
                    const doneBtn = card.querySelector('.done-btn');
                    const check = card.querySelector('.done-check');

                    // بازگرداندن دکمه Done و Edit
                    if(doneBtn) doneBtn.style.display = 'inline';
                    if(editBtn) editBtn.style.display = 'inline';

                    // مخفی کردن تیک
                    if(check) check.style.display = 'none';
                });
            });

        });
    </script>
}

