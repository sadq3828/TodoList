@{
    ViewData["Title"] = "Todo List";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-12"> <!-- عرض بزرگ‌تر -->

        <!-- Add Todo Card -->
        <d   <!-- Add Todo Card -->
        <div class="card mb-4 p-3">
            <div class="card-body">
                <h5 class="card-title mb-3 text-primary">Add New Task</h5>

                <form asp-action="Create" method="post">
                    <h5>Title:</h5>
                    <div class="mb-2">
                        <input type="text" name="title" class="form-control" placeholder="Task Title (English / فارسی)" dir="auto" required>
                    </div>

                    <h5>Description:</h5>
                    <div class="mb-2">
                        <textarea name="description" class="form-control todo-input" placeholder="Task Description (optional)" dir="auto" rows="3"></textarea>
                    </div>

                    <div class="d-flex justify-content-end mt-2">
                        <button type="submit" class="btn btn-primary btn-sm">Add</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Todo Cards -->
        <div class="d-flex flex-wrap gap-3 justify-content-start">
            @foreach (var todo in Model)
            {
                <div class="card todo-card flex-fill">
                    <div class="card-body d-flex flex-column position-relative">
                        <div class="todo-date text-end">@todo.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</div>
                        <h6 class="fw-bold mt-2">@todo.Title
                            @if(todo.IsDone)
                            {
                                <span class="text-success ms-2">&#10003;</span>
                            }
                        </h6>
                        <p class="card-text mt-1">@todo.Description</p>
                        <div class="mt-auto d-flex justify-content-end gap-2">

                            <!-- Toggle Done -->
                            <form asp-action="ToggleDone" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn btn-sm @(todo.IsDone ? "btn-secondary" : "btn-success")">
                                    @(todo.IsDone ? "Undone" : "Done")
                                </button>
                            </form>

                            <!-- Delete -->
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>

                        </div>
                    </div>
                </div>
            }
        </div>

            <!-- نمونه کار Done -->
            <div class="card todo-card flex-fill">
                <div class="card-body d-flex flex-column position-relative">
                    <div class="todo-date text-end">
                        2025-12-12 04:15 PM
                    </div>
                    <h6 class="fw-bold mt-2">تمرین پروژه TodoList</h6>
                    <p class="card-text mt-1">
                        تکمیل بخش فرانت و افزودن کارت‌ها با ساعت و دکمه‌ها
                    </p>
                    <div class="mt-auto d-flex justify-content-end gap-2">
                        <button class="btn btn-sm btn-primary">Edit</button>
                         <button class="btn btn-sm btn-success toggle-status">Done</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .todo-card {
            min-width: 100%;
            /* کارت‌ها حداکثر به اندازه فرم Add */
            margin-bottom: 1rem;
        }
        .todo-input {
            min-height: 80px;
            /* بزرگ‌تر کردن textarea فرم Add */
        }
    </style>
}

@section Scripts {
    <script>
        document.querySelectorAll('.toggle-status').forEach(button => {
            button.addEventListener('click', () => {
                const container = button.parentElement; // div دکمه‌ها
                const cardBody = container.parentElement; // card-body
                // دکمه Done رو حذف کن
                button.remove();
                // اضافه کردن تیک کنار عنوان
                const title = cardBody.querySelector('h6'); // عنوان کار
                if (title) {
                    const check = document.createElement('span');
                    check.className = 'text-success ms-2'; // فاصله از عنوان و رنگ سبز
                    check.innerHTML = '&#10003;'; // تیک ✔
                    title.appendChild(check);
                }
            });
        });
    </script>
}
